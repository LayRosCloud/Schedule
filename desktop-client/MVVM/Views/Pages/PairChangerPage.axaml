<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MVVM.Views.Pages.PairChangerPage">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock Text="Группа И-31"/>
        <ComboBox PlaceholderText="Выберите преподавателя-пару" HorizontalAlignment="Stretch"/>
        <StackPanel Orientation="Horizontal" >
            <CalendarDatePicker SelectedDateFormat="Long" VerticalAlignment="Center"/>
            <ComboBox Margin="5 5 0 0" PlaceholderText="Выберите время" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        </StackPanel>
        
        <ComboBox Margin="0 5 0 0" PlaceholderText="Выберите аудиторию" HorizontalAlignment="Stretch"/>
        <ComboBox Margin="0 5 0 0" PlaceholderText="Выберите тип пары" HorizontalAlignment="Stretch"/>
        <Button Margin="0 5 0 0" Content="Тимоха, ты че творишь? Это рофлс" Click="SavePair"/>
    </StackPanel>
</UserControl>
