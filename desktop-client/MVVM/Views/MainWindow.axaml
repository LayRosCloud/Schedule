<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MVVM.Views.MainWindow"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Title="Главное окно">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Background="#C6C1C1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Content="Меню"/>
            <StackPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Border Background="#B3CF" Width="50" Height="50" CornerRadius="50"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Width="200">
                <Button Content="Расписание"/>
            </StackPanel>
            <Button Grid.Row="2" VerticalAlignment="Bottom" Content="Выйти"/>
        </Grid>
        <ContentControl x:Name="PageControl" Grid.Column="1"/>
    </Grid>
</Window>
